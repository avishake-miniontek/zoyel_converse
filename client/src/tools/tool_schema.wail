object ToolCall {
    name: String
    arguments: Object
}

object ToolResponse {
    result: Object
}

template ExecuteTool(tool_name: String, args: Object) -> ToolResponse {
    prompt: """
    Execute the tool {{tool_name}} with arguments:
    {{args}}
    
    Return the result in this format:
    {{return_type}}
    """
}

main {
    template_args {
        tool_name: String
        args: Object
    }

    let tool_call = ExecuteTool(
        tool_name: $tool_name,
        args: $args
    );

    prompt {
        {{tool_call}}
    }
}
